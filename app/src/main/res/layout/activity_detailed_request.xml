<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="#bababa"
            android:orientation="vertical"
            >
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="6dp"
                    android:weightSum="1"
                    >

                <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="168dp"
                        android:layout_marginBottom="6dp"
                        android:paddingEnd="6dp"
                        android:paddingStart="6dp"
                        android:layout_weight="0.67"
                        />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        >

                    <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:background="@color/subNormal"
                            >

                        <TextView
                                android:layout_width="66dp"
                                android:layout_height="19dp"
                                android:textSize="@dimen/small"
                                android:textColor="@android:color/white"
                                android:gravity="center_vertical"
                                android:text="@string/quotation_result_count"
                                android:layout_marginTop="18dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginBottom="18dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                />

                        <TextView
                                android:id="@+id/finalQuotationCount"
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:textSize="@dimen/large"
                                android:textColor="@android:color/white"
                                android:gravity="center_vertical"
                                android:layout_marginTop="11dp"
                                android:layout_marginRight="11dp"
                                android:layout_marginBottom="11dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                />
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:background="@android:color/white"
                            >

                        <TextView
                                android:layout_width="66dp"
                                android:layout_height="19dp"
                                android:textSize="@dimen/small"
                                android:textColor="@color/normalTypo"
                                android:gravity="center_vertical"
                                android:text="@string/average_mola"
                                android:layout_marginTop="18dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginBottom="18dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                />

                        <TextView
                                android:id="@+id/averageInterestRate"
                                android:layout_width="70dp"
                                android:layout_height="33dp"
                                android:textSize="@dimen/large"
                                android:textColor="@color/normalTypo"
                                android:gravity="center_vertical"
                                android:layout_marginTop="11dp"
                                android:layout_marginRight="11dp"
                                android:layout_marginBottom="11dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="6dp"
                ></LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="30dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:background="#ffffff"

                >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    <ImageView
                            android:id="@+id/loanTypeImageView"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/ic_favorite"
                            />
                    <Space
                            android:layout_width="2dp"
                            android:layout_height="48dp"
                            android:background="#bdbdbd"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            />
                    <LinearLayout
                            android:layout_width="231dp"
                            android:layout_height="48dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >
                        <TextView
                                android:id="@+id/requestAddress"
                                android:layout_width="match_parent"
                                android:layout_height="16dp"
                                android:textSize="13sp"
                                android:textColor="#262637"
                                android:text="세종특별자치시 세종특별자치시 조치원읍"
                                />
                        <TextView
                                android:id="@+id/requestAddressApt"
                                android:layout_width="match_parent"
                                android:layout_height="16dp"
                                android:textSize="13sp"
                                android:textColor="#262637"
                                android:text="대덕테크노밸리(11단지)감사"
                                />
                        <TextView
                                android:id="@+id/requestAddressSize"
                                android:layout_width="match_parent"
                                android:layout_height="16dp"
                                android:textSize="13sp"
                                android:textColor="#262637"
                                android:text="109.42㎡ / 89.98㎡"
                                />
                    </LinearLayout>
                </LinearLayout>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal"
                        >
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:text="대출한도"
                            />
                    <TextView
                            android:id="@+id/requestLimitAmount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#262637"
                            android:gravity="end"
                            tools:text="3.8억"
                            />
                </LinearLayout>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal"
                        >
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:text="대출금액"
                            />
                    <TextView
                            android:id="@+id/loanAmount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#262637"
                            android:gravity="end"
                            tools:text="1.5억"
                            />
                </LinearLayout>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal"
                        >
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:text="금리방식"
                            />
                    <TextView
                            android:id="@+id/typeLoan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#262637"
                            android:gravity="end"
                            tools:text="고정"
                            />
                </LinearLayout>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal"
                        >
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:text="연체이력"
                            />
                    <TextView
                            android:id="@+id/requestOverDue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#262637"
                            android:gravity="end"
                            tools:text="없음"
                            />
                </LinearLayout>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal"
                        >
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:text="직업구분"
                            />
                    <TextView
                            android:id="@+id/jobType"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#262637"
                            android:gravity="end"
                            tools:text="개인사업자"
                            />

                </LinearLayout>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal"
                        >
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:text="실행예정일"
                            />
                    <TextView
                            android:id="@+id/scheduledTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#262637"
                            android:gravity="end"
                            tools:text="17.06.13"
                            />
                </LinearLayout>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal"
                        >
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:text="주거래은행"
                            />
                    <TextView
                            android:id="@+id/mainBank"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="#262637"
                            android:gravity="end"
                            tools:text="신한은행"
                            />
                </LinearLayout>
                <Button
                        android:id="@+id/calledAddEstimate"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="296dp"
                        android:layout_height="48dp"
                        android:background="#00bfa5"
                        android:textStyle=""
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="30dp"
                        android:text="견적서 전송"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>